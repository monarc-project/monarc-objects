{
    "$schema": "http://json-schema.org/schema#",
    "title": "Validator for referentials used in MONARC",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "uniqid": {
            "type": "string",
            "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
        },
        "label": {
            "type": "string"
        },
        "version": {
            "type": "integer"
        },
        "label": {
            "type": "string"
        },
        "authors": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "string"
            }
        },
        "measures": {
            "uniqueItems": true,
            "type": "object",
            "properties": {
                "uniqid": {
                    "type": "string",
                    "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
                },
                "label": {
                    "type": "string"
                },
                "category": {
                    "type": "string"
                },
                "code": {
                    "type": "string"
                }
            },
            "required": [
                "uniqid",
                "label",
                "category",
                "code"
            ]
        }
    },
    "required": [
        "uniqid",
        "label",
        "version",
        "measures"
    ]
}
