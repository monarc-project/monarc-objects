{
    "$schema": "http://json-schema.org/schema#",
    "title": "Validator for referentials used in MONARC",
    "type": "object",
    "additionalProperties": false,
    "defs": {
        "non-empty-string": {
            "type": "string",
            "minLength": 1
        }
    },
    "properties": {
        "uuid": {
            "type": "string",
            "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
        },
        "label": {
            "type": "string"
        },
        "version": {
            "type": "string"
        },
        "authors": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "string"
            }
        },
        "measures": {
            "uniqueItems": true,
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "uuid": {
                        "type": "string",
                        "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
                    },
                    "label": {
                        "type": "string"
                    },
                    "category": {
                        "type": "string"
                    },
                    "code": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "uuid",
                "label",
                "category",
                "code"
            ]
        },
        "refs": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "$ref": "#/defs/non-empty-string"
            }
        },
        "authors": {
            "type": "array",
            "uniqueItems": true,
            "items": {
                "type": "string"
            }
        }
    },
    "required": [
        "uuid",
        "label",
        "version",
        "measures"
    ]
}
