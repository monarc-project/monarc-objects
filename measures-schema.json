{
    "$schema": "http://json-schema.org/schema#",
    "id": "https://objects.monarc.lu/schema/def/3777ff96-2d37-4ad2-8789-7aa3417b6312",
    "additionalProperties": false,
    "properties": {
        "authors": {
            "items": {
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "label": {
            "type": "string"
        },
        "category": {
            "type": "string"
        },
        "code": {
            "type": "string"
        },
        "language": {
            "default": "EN",
            "oneOf": [
                {
                    "pattern": "^[A-Z]{2}$",
                    "type": "string"
                }
            ],
            "type": "string"
        },
        "refs": {
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "type": "array",
            "uniqueItems": true
        },
        "uuid": {
            "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}",
            "type": "string"
        },
        "version": {
            "type": "integer"
        }
    },
    "required": [
        "uuid",
        "label",
        "category",
        "code",
        "version"
    ],
    "title": "Validator for measure used in MONARC",
    "type": "object"
}
