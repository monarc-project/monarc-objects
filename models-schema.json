        },
        "measure-mapping": {
            "$ref": "https://objects.monarc.lu/schema/def/24d133a5-fab5-4be6-b455-55068cee7a28"
        }
    },
    "properties": {
        "authors": {
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "label": {
            "type": "string"
        },
        "language": {
