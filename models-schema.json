                {
                    "pattern": "^[A-Z]{2}$",
                    "type": "string"
                }
            ],
            "type": "string"
        },
        "referentials": {
            "items": {
                "type": "object",
                "$ref": "#/definitions/referential"
            },
            "type": "array"
        },
        "measures": {
            "items": {
                "type": "object",
                "$ref": "#/definitions/measure"
            },
            "type": "array"
        },
        "measures-mapping": {
            "items": {
                "type": "object",
                "$ref": "#/definitions/measure-mapping"
            },
            "type": "array"
        }
    },
    "required": [
        "label",
        "language",
        "version"
    ],
    "type": "object"
}
