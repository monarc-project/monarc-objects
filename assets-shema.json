{
    "$schema": "http://json-schema.org/schema#",
    "additionalProperties": false,
    "id": "",
    "properties": {
        "authors": {
            "items": {
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "code": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "label": {
            "type": "string"
        },
        "language": {
            "default": "EN",
            "oneOf": [
                {
                    "pattern": "^[A-Z]{2}$",
                    "type": "string"
                }
            ],
            "type": "string"
        },
        "type": {
            "enum": [
                "Primary",
                "Secondary"
            ],
            "type": "string"
        },
        "uuid": {
            "type": "string"
        },
        "version": {
            "type": "integer"
        }
    },
    "required": [
        "uuid",
        "code",
        "label",
        "description",
        "type",
        "version"
    ],
    "title": "Validator for assets used in MONARC",
    "type": "object"
}
