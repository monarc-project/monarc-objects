{
  "$schema": "http://json-schema.org/schema#",
  "title": "Validator for assets used in MONARC",
  "id": "",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "description": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "version": {
      "type": "integer"
    },
    "name": {
      "type": "string"
    },
    "uuid": {
