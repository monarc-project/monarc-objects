{
    "$schema": "http://json-schema.org/schema#",
    "additionalProperties": false,
    "id": "",
    "definitions": {
        "asset": {
            "$ref": "https://objects.monarc.lu/schema/def/1"
        },
        "threat": {
            "$ref": "https://objects.monarc.lu/schema/def/15"
        },
        "vulnerability": {
            "$ref": "https://objects.monarc.lu/schema/def/14"
        },
        "object": {
            "type": "object",
            "properties": {
                "uuid": {
                    "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}",
                    "type": "string"
                },
                "version": {
                    "type": "integer"
                },
                "asset": {
                    "type": "object",
                    "$ref": "#/definitions/asset"
                },
                "threat": {
                    "type": "object",
                    "$ref": "#/definitions/threat"
                },
                "vulnerability": {
                    "type": "object",
                    "$ref": "#/definitions/vulnerability"
                },
                "children": {
                    "type": "array",
                    "items": { "$ref": "#/definitions/object" },
                    "default": []
                }
            },
            "required": [
                "uuid",
                "asset",
                "threat",
                "vulnerability",
                "version",
                "children"
            ]
        }
    },
    "type": "object",
    "properties": {
        "object": { "$ref": "#/definitions/object" }
    },
    "required": [
        "object"
    ],
    "title": "Validator for objects used in MONARC"
}
