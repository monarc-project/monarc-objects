{
    "$id": "https://objects.monarc.lu/schema/def/9b9e44b1-a943-4f95-b0c3-df1015063a10",
    "title": "Validator for threats used in MONARC",
    "$schema": "http://json-schema.org/schema#",
    "additionalProperties": false,
    "properties": {
        "a": {
            "default": false,
            "type": "boolean"
        },
        "authors": {
            "items": {
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "c": {
            "default": false,
            "type": "boolean"
        },
        "code": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "i": {
            "default": false,
            "type": "boolean"
        },
        "label": {
            "type": "string"
        },
        "language": {
            "default": "EN",
            "oneOf": [
                {
                    "pattern": "^[A-Z]{2}$",
                    "type": "string"
                }
            ],
            "type": "string"
        },
        "theme": {
            "type": "string"
        },
        "uuid": {
            "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}",
            "type": "string"
        }
    },
    "required": [
        "uuid",
        "code",
        "label"
    ],
    "type": "object"
}
