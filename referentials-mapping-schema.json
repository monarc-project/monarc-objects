{
    "$id": "http://example.com/root.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "defs": {
        "non-empty-string": {
            "type": "string",
            "minLength": 1
        }
    },
    "properties": {
        "uuid": {
            "type": "string",
            "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
        },
        "version": {
            "type": "integer"
        },
        "label": {
            "default": "",
            "examples": [
                "ISO / NIST"
            ],
            "pattern": "^(.*)$",
            "title": "The Label Schema",
            "type": "string"
        },
        "values": {
            "$id": "#/properties/values",
            "items": {
                "$id": "#/properties/values/items",
                "properties": {
                    "control": {
                        "$id": "#/properties/values/items/properties/control",
                        "default": "",
                        "examples": [
                            "UUID1"
                        ],
                        "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}",
                        "title": "The Control-uuid Schema",
                        "type": "string"
                    },
                    "match": {
                        "$id": "#/properties/values/items/properties/match",
                        "default": "",
                        "examples": [
                            "UUID2"
                        ],
                        "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}",
                        "title": "The Match-uuid Schema",
                        "type": "string"
                    }
                },
                "required": [
                    "control",
                    "match"
                ],
                "title": "The Items Schema",
                "type": "object"
            },
            "title": "The Mapping Schema",
            "type": "array"
        },
        "refs": {
            "type": "array",
            "minItems": 1,
            "uniqueItems": true,
            "items": {
                "$ref": "#/defs/non-empty-string"
            }
        }
    },
    "required": [
        "uuid",
        "version",
        "label",
        "values"
    ],
    "title": "The Root Schema",
    "type": "object"
}
