{
    "$schema": "http://json-schema.org/schema#",
    "$id": "https://objects.monarc.lu/schema/def/308deb4c-0249-43ed-9f6f-f5c60b630d8f",
    "title": "Validator for referentials used in MONARC",
    "additionalProperties": false,
    "definitions": {
        "measure": {
            "$ref": "https://objects.monarc.lu/schema/def/3777ff96-2d37-4ad2-8789-7aa3417b6312"
        }
    },
    "properties": {
        "authors": {
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "label": {
            "type": "string"
        },
        "language": {
            "default": "EN",
            "oneOf": [
                {
                    "pattern": "^[A-Z]{2}$",
                    "type": "string"
                }
            ],
            "type": "string"
        },
        "refs": {
            "items": {
                "type": "string"
            },
            "minItems": 1
        },
        "uuid": {
            "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}",
            "type": "string"
        },
        "values": {
          "items": {
            "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}",
            "type": "string",
            "description": "UUID of a measure.",
            "$comment": "UUID of a measure."
          },
          "type": "array"
        },
        "version": {
            "type": "integer"
        },
        "version_ext": {
            "type": "string"
        }
    },
    "required": [
        "uuid",
        "label",
        "version",
        "values"
    ],
    "type": "object"
}
